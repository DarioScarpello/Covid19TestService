<Window x:Class="Covid19TestService_WPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Covid19TestService_WPF"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="350">
    <Grid Background="#FF616DD6">
        <TextBox x:Name="tb_email" HorizontalAlignment="Center" Margin="0,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Height="26"/>
        <TextBox x:Name="tb_password" HorizontalAlignment="Center" Margin="0,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Height="26"/>
        <Button x:Name="tb_submit" Content="Anmelden" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Height="19" Width="90"/>
        <Label Content="E-Mail" HorizontalAlignment="Left" Margin="62,22,0,0" VerticalAlignment="Top" Height="24" Width="91"/>
        <Label Content="Passwort" HorizontalAlignment="Left" Margin="62,78,0,0" VerticalAlignment="Top" Height="24" Width="91"/>

    </Grid>
</Window>
